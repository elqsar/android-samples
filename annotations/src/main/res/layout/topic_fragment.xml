<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:padding="16dp"
            android:textSize="18sp"
            android:text="Topic Name"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <EditText
            android:layout_width="0dp"
            android:padding="16dp"
            android:id="@+id/topic_name_edit"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:padding="16dp"
            android:textSize="18sp"
            android:text="Topic Description"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <EditText
            android:layout_width="0dp"
            android:padding="16dp"
            android:id="@+id/topic_description_edit"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>


    </LinearLayout>

    <Button
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:id="@+id/save_topic"
        android:layout_width="match_parent"
        android:text="Save Topic"
        android:textColor="#FFFFFF"
        android:background="@color/nextPageButton"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/topic_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>

</LinearLayout>